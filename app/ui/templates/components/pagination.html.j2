{% if pagination is defined %}
<div class="pagination">
    <ul class="flex justify-center gap-1 text-gray-900">
        <li class="page-item {{ 'page-item-disabled' if pagination.page == 1 else '' }} next-previous-page">
            {% if pagination.page > 1 %}
            <a href="?page={{ pagination.page - 1 }}" aria-label="Previous page">
            {% endif%}
            <svg xmlns="http://www.w3.org/2000/svg" class="size-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            </a>
        </li>

        {% for page in range(1, pagination.pages + 1) %}
        <li class="page-item {{ 'page-item-active' if page == pagination.page }}">
            {% if page == pagination.page %}
            {{ page }}
            {% else %}
            <a href="?page={{ page }}">
                {{ page }}
            </a>
        {% endif %}
        </li>
        {% endfor %}

        <li class="page-item {{ 'page-item-disabled' if pagination.page == pagination.pages else '' }} next-previous-page">
            {% if pagination.page < pagination.pages %}
            <a href="?page={{ pagination.page + 1 }}" aria-label="Next page">
            {% endif %}
            <svg xmlns="http://www.w3.org/2000/svg" class="size-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            </a>
        </li>
    </ul>
</div>
{% endif %}